<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sc1prabin.neblog">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/blog_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/blog_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.NeBlog">
        <activity android:name=".CreateAccountActivity"></activity>
        <activity android:name=".AddPostActivity"></activity>
        <activity android:name=".PostListActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>